-- Espera jogo carregar por completo
repeat task.wait() until game:IsLoaded()
repeat task.wait() until game:GetService("Players").LocalPlayer
repeat task.wait() until game:GetService("Players").LocalPlayer.Character
repeat task.wait() until game:GetService("Players").LocalPlayer.PlayerGui

-- Heartbeat
local running = true
local firstBeat = false
task.spawn(function()
    while task.wait(4) and running do
        local player = game:GetService("Players").LocalPlayer
        local data = string.format(
            '{"playerName":"%s","time":"%s"}',
            player.Name,
            os.date("!%Y-%m-%dT%H:%M:%SZ", os.time())
        )
        pcall(function()
            writefile("checkyum.json", data)
        end)
        firstBeat = true
    end
end)

-- SÃ³ continua quando jÃ¡ gravou pelo menos um heartbeat
repeat task.wait() until firstBeat

print("âœ… Heartbeat iniciado")

