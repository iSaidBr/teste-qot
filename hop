-- Guard contra duplicação
if getgenv().HopRunning then
    warn("Hop já estava rodando, ignorado.")
    return
end
getgenv().HopRunning = true

-- Contador
getgenv().HopCount = (getgenv().HopCount or 0) + 1
print("Script rodando! Hop número: " .. tostring(getgenv().HopCount))

-- Heartbeat
task.spawn(function()
    while true do
        pcall(function()
            writefile("manager_heartbeat.txt", tostring(os.time()))
        end)
        task.wait(10)
    end
end)

-- Espera jogo carregar
repeat task.wait() until game:IsLoaded()

-- ✅ Só enfileira uma vez
if not getgenv().HopQueued then
    getgenv().HopQueued = true
    queue_on_teleport('loadstring(game:HttpGet("https://raw.githubusercontent.com/iSaidBr/teste-qot/refs/heads/main/hop"))()')
end

-- Executa farming
script_key = "lqEDtgthalNLvLXEbzHnWZctJAQrwWNA"
loadstring(game:HttpGet("https://raw.githubusercontent.com/BlitzIsKing/UniversalFarm/refs/heads/main/Jailbreak/autoRob"))()
